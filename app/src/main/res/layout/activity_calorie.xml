<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.awaneesh.rohan.kewal.darshan.philips.Calorie">

    <TextView
        android:text="Lets keep your diabeties at bay!!"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Today's calorie intake challenge is-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp" />

    <TextView
        android:text="calorie"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/ctv"
android:padding="20dp"
        android:paddingLeft="40dp"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:background="#000000" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="And lets not forgot- " />

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="* A high-protein diet is best.\n*You have to cut way down on carbs. \n* Limit consumption of alcohol and sweets\n* Eat plenty of whole grain foods, fruits, and vegetables\n* Stick to regular meal times " />


</LinearLayout>
